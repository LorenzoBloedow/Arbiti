{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Bundler"
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
